<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <log4net>
      <appender name="UdpTextAppender" type="Propeller.Log.Appenders.UdpTextAppender, Propeller.Log">
        <port value="8085" />
        <destination value="127.0.0.1" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{log4net:HostName} %date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
        </layout>
      </appender>
      <root>
        <appender-ref ref="UdpTextAppender" />
      </root>
    </log4net>
  </sitecore>
</configuration>
